@model AptidudeTest.Models.Question

@{
    ViewData["Title"] = "Create";
}

<h1>Create Question</h1>
<div>
    <a class="btn btn-warning"asp-action="Index">Back to List</a>
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Image" class="control-label" ></label>*@
                <input type="hidden" asp-for="Image" class="form-control" value=" "/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Point" class="control-label"></label>
                <input asp-for="Point" class="form-control" />
                <span asp-validation-for="Point" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ExamId" type="hidden" class="form-control" value = "@ViewData["ExamId"]" />
            </div>
            <br />
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
