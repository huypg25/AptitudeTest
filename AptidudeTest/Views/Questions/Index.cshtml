@model IEnumerable<AptidudeTest.Models.Question>

@{
	ViewData["Title"] = "Index";
	int c = 1;
}

<h1> List Question</h1>


<p>
	<a class="btn btn-success"asp-action="Create">Create New</a>
</p>
<table id="dataTable"class="table table-striped" style="width:100%">
	<thead>
		<tr>
			<th>
				#
			</th>
			<th>
				Question
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Point)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@c</td>
				<td>
					@Html.DisplayFor(modelItem => item.Text)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Point)
				</td>
				<td>
					<a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">Edit</a> 
					<a asp-action="Delete" class="btn btn-danger"asp-route-id="@item.Id">Delete</a>
					<a asp-action="Index" class="btn btn-secondary"asp-controller="Choices" asp-route-id="@item.Id">List Choices</a>

				</td>
			</tr>
			c++;
		}
	</tbody>
</table>
